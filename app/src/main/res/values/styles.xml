<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HiddenSheet_Headers">
        <item name="android:textSize">@dimen/header_full</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
    </style>

    <style name="HiddenSheet_Headers_Expanded">
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
    </style>

    <style name="HiddenSheet_Subheader">
        <item name="android:textSize">@dimen/header_full</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorHeaderTabFour</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="HiddenSheet_Subheader_Details">
        <item name="android:textSize">@dimen/textview_small</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>
